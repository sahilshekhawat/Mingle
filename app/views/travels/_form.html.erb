<%= form_for(@travel) do |f| %>
  <% if @travel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@travel.errors.count, "error") %> prohibited this travel from being saved:</h2>

      <ul>
      <% @travel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <p style = "color: white"><%= f.label :from %><br></p>
    <p style = "color: black"><%= f.text_field :from %></p>
  </div>

  <div class="field">
    <p style = "color: white"><%= f.label :to %><br></p>
    <p style = "color: black"><%= f.text_field :to %></p>
  </div>

  <div  class="input-append">
    <div class="input-group datepicker">
      <label for="travel_datetime">When</label><br>
      <% if @travel.datetime %>
    <%= f.text_field :datetime, :class => "form-control", "data-date-format" => "DD/MM/YYYY HH:mm",:value=>@travel.datetime.strftime('%d/%M/%Y %l:%M')  %>
    <% else %>
    <%= f.text_field :datetime, :class => "form-control", "data-date-format" => "DD/MM/YYYY HH:mm" %>
    <%end %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
    </span>
    </div>
    </div>
    <%= f.hidden_field :user_id , value: current_user.id%>
  <div class="field">
    <p style = "color: white"><%= f.label :medium %><br></p>
    <p style = "color:black"><%= f.text_field :medium %></p>
  </div>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-success"%>
    <%= link_to 'Back', travels_path, :class => "btn btn-primary"%>
  </div>
</div>
<% end %>
<script type="text/javascript">
$('.datepicker').datetimepicker();
</script>
