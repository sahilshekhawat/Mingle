<h1 style = "font-family: Bubbler One;font-size: 50px;color: #0099CC;">Pool your Travel</h1>
<%= link_to 'New Travel', new_travel_path, :class => "btn btn-info"%>

<div style = "margin-top: 2%;">
  <div id="directions" style='margin-left: auto;margin-right: auto;padding-right: 0;padding-left: 0;width: 100%; height: 400px;'></div>
</div>

<div class = "panel panel-info" style = "margin-top: 2%;">
  <div class = "panel-heading">Your Travels</div>
    <table class = "table">
      <thead>
        <tr>
          <th>From</th>
          <th>From Lat</th>
          <th>From Lon</th>
          <th>To</th>
          <th>To Lat</th>
          <th>To Lon</th>
          <th>Date & Time</th>
          <th>User</th>
          <th>Medium</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @travels.each do |travel| %>
          <tr>
            <td><%= travel.from %></td>
            <td><%= travel.flatitude %></td>
            <td><%= travel.flongitude %></td>
            <td><%= travel.to %></td>
            <td><%= travel.tlatitude %></td>
            <td><%= travel.tlongitude %></td>
            <td><%= travel.datetime %></td>
            <td><%=link_to travel.user do%><%= travel.user.name %><%end%></td>
            <td><%= travel.medium %></td>
            <td><%= link_to 'Show', travel, :class => "btn btn-xs btn-primary" %></td>
            <td><%= link_to 'Edit', edit_travel_path(travel), :class => "btn btn-xs btn-primary" %></td>
            <td><%= link_to 'Cancel', travel, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

