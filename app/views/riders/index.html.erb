<h1>Listing Rides</h1>
<table>
  <h3>Previous Rides</h3>
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.source %></td>
        <td><%= rider.destination %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Ride', new_rider_path %>
